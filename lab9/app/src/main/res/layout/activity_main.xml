<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:text="ID :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_id_std"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="Parent"
            android:layout_marginRight="16dp"
            app:layout_constraintEnd_toStartOf="@id/edit_text_id_std"/>
    <TextView
            android:text="First Name :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_first_name"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="@+id/edit_text_first_name"
            android:layout_marginRight="16dp"
            app:layout_constraintEnd_toStartOf="@id/edit_text_first_name" />
    <TextView
            android:text="Last Name :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_last_name"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="@+id/edit_text_last_name"
            app:layout_constraintEnd_toStartOf="@id/edit_text_last_name"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edit_text_id_std"
            android:layout_marginRight="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edit_text_first_name"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/edit_text_id_std"
            android:layout_marginRight="8dp"
            app:layout_constraintEnd_toEndOf="parent" />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edit_text_last_name"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="135dp"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>

    <Button
            android:id="@+id/button_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="48dp"
            android:text="send"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.61"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_last_name"/>
</android.support.constraint.ConstraintLayout>
